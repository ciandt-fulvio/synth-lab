{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://synthlab.com/schemas/synth/v2.0.0",
  "title": "Synth (Synthetic Persona)",
  "description": "Schema simplificado v2.0.0 para persona sintética brasileira com atributos demográficos, psicográficos, comportamentais e cognitivos baseados em distribuições reais do IBGE Censo 2022, PNAD 2023, PNS 2019 e pesquisas verificadas",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]{6}$",
      "description": "Identificador único de 6 caracteres alfanuméricos"
    },
    "nome": {
      "type": "string",
      "description": "Nome completo brasileiro"
    },
    "arquetipo": {
      "type": "string",
      "description": "Resumo do perfil: {Faixa Etária} {Região} {Perfil Psicográfico}"
    },
    "descricao": {
      "type": "string",
      "description": "Descrição textual resumida do Synth"
    },
    "link_photo": {
      "type": "string",
      "format": "uri",
      "description": "URL para foto de perfil (avatar)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp de criação em ISO 8601 com timezone"
    },
    "version": {
      "type": "string",
      "pattern": "^2\\.0\\.0$",
      "description": "Versão do schema (v2.0.0)"
    },
    "demografia": {
      "type": "object",
      "properties": {
        "idade": {
          "type": "integer",
          "minimum": 0,
          "maximum": 120,
          "description": "Idade em anos completos"
        },
        "genero_biologico": {
          "type": "string",
          "enum": ["masculino", "feminino", "intersexo"],
          "description": "Gênero biológico"
        },
        "identidade_genero": {
          "type": "string",
          "enum": [
            "homem cis",
            "mulher cis",
            "homem trans",
            "mulher trans",
            "não-binário",
            "outro"
          ],
          "description": "Identidade de gênero autodeclarada"
        },
        "raca_etnia": {
          "type": "string",
          "enum": ["branco", "pardo", "preto", "amarelo", "indígena"],
          "description": "Raça/etnia conforme categorização IBGE"
        },
        "localizacao": {
          "type": "object",
          "properties": {
            "pais": {
              "type": "string",
              "const": "Brasil",
              "description": "País (sempre Brasil nesta versão)"
            },
            "regiao": {
              "type": "string",
              "enum": ["Norte", "Nordeste", "Centro-Oeste", "Sudeste", "Sul"],
              "description": "Região brasileira"
            },
            "estado": {
              "type": "string",
              "enum": [
                "AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO", "MA",
                "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI", "RJ", "RN",
                "RS", "RO", "RR", "SC", "SP", "SE", "TO"
              ],
              "description": "Unidade Federativa (UF)"
            },
            "cidade": {
              "type": "string",
              "description": "Nome da cidade"
            }
          }
        },
        "escolaridade": {
          "type": "string",
          "enum": [
            "Sem instrução",
            "Fundamental incompleto",
            "Fundamental completo",
            "Médio incompleto",
            "Médio completo",
            "Superior incompleto",
            "Superior completo",
            "Pós-graduação"
          ],
          "description": "Nível de escolaridade conforme IBGE"
        },
        "renda_mensal": {
          "type": "number",
          "minimum": 0,
          "description": "Renda mensal individual em BRL"
        },
        "ocupacao": {
          "type": "string",
          "description": "Profissão/ocupação conforme CBO"
        },
        "estado_civil": {
          "type": "string",
          "enum": ["solteiro", "casado", "união estável", "divorciado", "viúvo"],
          "description": "Estado civil"
        },
        "composicao_familiar": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "unipessoal",
                "casal sem filhos",
                "casal com filhos",
                "monoparental",
                "multigeracional",
                "outros"
              ],
              "description": "Tipo de composição familiar"
            },
            "numero_pessoas": {
              "type": "integer",
              "minimum": 1,
              "maximum": 15,
              "description": "Número de pessoas no domicílio"
            }
          }
        }
      }
    },
    "psicografia": {
      "type": "object",
      "properties": {
        "personalidade_big_five": {
          "type": "object",
          "properties": {
            "abertura": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Abertura a experiências (0=baixa, 100=alta)"
            },
            "conscienciosidade": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Conscienciosidade (0=baixa, 100=alta)"
            },
            "extroversao": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Extroversão (0=introvertido, 100=extrovertido)"
            },
            "amabilidade": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Amabilidade (0=baixa, 100=alta)"
            },
            "neuroticismo": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Neuroticismo (0=estável, 100=neurótico)"
            }
          }
        },
        "interesses": {
          "type": "array",
          "items": {"type": "string"},
          "uniqueItems": true,
          "description": "Áreas de interesse (1-4 itens, correlacionado com trait de abertura: baixa=1-2, média=2-3, alta=3-4)"
        },
        "inclinacao_politica": {
          "type": "integer",
          "minimum": -100,
          "maximum": 100,
          "description": "Espectro político (-100=esquerda, 0=centro, +100=direita). CORRELACIONADO com religião: católicos/evangélicos tendem à direita (60%). Fonte: DataSenado/Nexus Panorama Político 2024 - 29% direita, 15% esquerda, 11% centro, 40% neutro"
        },
        "inclinacao_religiosa": {
          "type": "string",
          "enum": [
            "católico",
            "evangélico",
            "espírita",
            "umbanda/candomblé",
            "ateu/agnóstico",
            "outras"
          ],
          "description": "Religião ou crença (Fonte: IBGE Censo 2022 - 56.7% católicos, 26.9% evangélicos, 9.3% sem religião)"
        }
      },
      "additionalProperties": false
    },
    "comportamento": {
      "type": "object",
      "properties": {
        "habitos_consumo": {
          "type": "object",
          "properties": {
            "frequencia_compras": {
              "type": "string",
              "enum": ["diária", "semanal", "quinzenal", "mensal", "esporádica"],
              "description": "Frequência de compras"
            },
            "preferencia_canal": {
              "type": "string",
              "enum": ["loja física", "e-commerce", "híbrido"],
              "description": "Canal de compra preferido"
            },
            "categorias_preferidas": {
              "type": "array",
              "items": {"type": "string"},
              "uniqueItems": true,
              "description": "Categorias de produtos preferidas"
            }
          }
        },
        "padroes_midia": {
          "type": "object",
          "properties": {
            "tv_aberta": {
              "type": "integer",
              "minimum": 0,
              "maximum": 70,
              "description": "Horas/semana de TV aberta"
            },
            "streaming": {
              "type": "integer",
              "minimum": 0,
              "maximum": 70,
              "description": "Horas/semana de streaming"
            },
            "redes_sociais": {
              "type": "integer",
              "minimum": 0,
              "maximum": 70,
              "description": "Horas/semana em redes sociais"
            }
          }
        },
        "fonte_noticias": {
          "type": "array",
          "items": {"type": "string"},
          "uniqueItems": true,
          "description": "Fontes de notícias utilizadas"
        },
        "lealdade_marca": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Lealdade a marcas (0=troca fácil, 100=muito fiel)"
        },
        "engajamento_redes_sociais": {
          "type": "object",
          "properties": {
            "plataformas": {
              "type": "array",
              "items": {"type": "string"},
              "uniqueItems": true,
              "description": "Plataformas de redes sociais usadas"
            },
            "frequencia_posts": {
              "type": "string",
              "enum": ["nunca", "raro", "ocasional", "frequente", "muito frequente"],
              "description": "Frequência de posts"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "deficiencias": {
      "type": "object",
      "properties": {
        "visual": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["nenhuma", "leve", "moderada", "severa", "cegueira"],
              "description": "Tipo de deficiência visual (Prevalência: 3.4% da população - IBGE PNS 2019)"
            }
          }
        },
        "auditiva": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["nenhuma", "leve", "moderada", "severa", "surdez"],
              "description": "Tipo de deficiência auditiva (Prevalência: 1.1% da população - IBGE PNS 2019)"
            }
          }
        },
        "motora": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["nenhuma", "leve", "moderada", "severa"],
              "description": "Tipo de deficiência motora de membros inferiores (Prevalência: 3.8% da população - IBGE PNS 2019)"
            },
            "usa_cadeira_rodas": {
              "type": "boolean",
              "description": "Usa cadeira de rodas (tipicamente quando deficiência motora é severa)"
            }
          }
        },
        "cognitiva": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["nenhuma", "leve", "moderada", "severa"],
              "description": "Tipo de limitação cognitiva/mental (Prevalência: 1.2% da população - IBGE PNS 2019)"
            }
          }
        }
      }
    },
    "capacidades_tecnologicas": {
      "type": "object",
      "properties": {
        "alfabetizacao_digital": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Nível de alfabetização digital"
        },
        "dispositivos": {
          "type": "object",
          "properties": {
            "principal": {
              "type": "string",
              "enum": ["smartphone", "computador", "tablet", "nenhum"],
              "description": "Dispositivo principal"
            },
            "qualidade": {
              "type": "string",
              "enum": ["novo", "intermediário", "antigo"],
              "description": "Qualidade do dispositivo"
            }
          }
        },
        "preferencias_acessibilidade": {
          "type": "object",
          "properties": {
            "zoom_fonte": {
              "type": "integer",
              "minimum": 100,
              "maximum": 300,
              "description": "Nível de zoom/fonte em porcentagem"
            },
            "alto_contraste": {
              "type": "boolean",
              "description": "Usa modo de alto contraste"
            }
          }
        },
        "velocidade_digitacao": {
          "type": "integer",
          "minimum": 10,
          "maximum": 120,
          "description": "Velocidade de digitação em palavras por minuto"
        },
        "frequencia_internet": {
          "type": "string",
          "enum": ["diária", "semanal", "mensal", "rara"],
          "description": "Frequência de acesso à internet"
        },
        "familiaridade_plataformas": {
          "type": "object",
          "properties": {
            "e_commerce": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Familiaridade com e-commerce"
            },
            "banco_digital": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Familiaridade com banco digital"
            },
            "redes_sociais": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "Familiaridade com redes sociais"
            }
          }
        }
      }
    },
    "vieses": {
      "type": "object",
      "properties": {
        "aversao_perda": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Intensidade de aversão à perda"
        },
        "desconto_hiperbolico": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Intensidade de desconto hiperbólico (preferência por recompensas imediatas)"
        },
        "suscetibilidade_chamariz": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Suscetibilidade ao efeito chamariz (decoy effect)"
        },
        "ancoragem": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Intensidade de ancoragem (influência do primeiro valor apresentado)"
        },
        "vies_confirmacao": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Intensidade do viés de confirmação"
        },
        "vies_status_quo": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Intensidade do viés de status quo (preferência por manter escolhas atuais)"
        },
        "sobrecarga_informacao": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Suscetibilidade à sobrecarga de informação (paralisia por excesso de opções)"
        }
      }
    }
  }
}
