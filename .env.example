# synth-lab Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL database connection
# Basic connection:
# DATABASE_URL=postgresql://user:password@localhost:5432/synthlab

# With connection parameters:
# DATABASE_URL=postgresql://user:password@localhost:5432/synthlab?connect_timeout=10

# Docker Compose default (for local development):
DATABASE_URL=postgresql://synthlab:synthlab_dev@localhost:5432/synthlab

# Test database (ISOLATED - for running tests safely)
# CRITICAL: Tests will DROP and recreate tables - never use production/dev DB!
DATABASE_TEST_URL=postgresql://synthlab:synthlab_dev@localhost:5432/synthlab_test

# Cloud providers:
# Render: Use the POSTGRES_URL or DATABASE_URL provided by Render
# Railway: Use the POSTGRES_URL or DATABASE_URL provided by Railway
# AWS RDS: postgresql://user:pass@your-rds-instance.region.rds.amazonaws.com:5432/synthlab
# GCP Cloud SQL: postgresql://user:pass@/synthlab?host=/cloudsql/project:region:instance
# Azure: postgresql://user:pass@your-server.postgres.database.azure.com:5432/synthlab

# =============================================================================
# PostgreSQL SSL Configuration (for production)
# =============================================================================

# SSL Mode options:
#   disable: No SSL
#   allow: Try SSL, fallback to unencrypted
#   prefer: Try SSL first (default for most clients)
#   require: Require SSL (recommended for production)
#   verify-ca: Require SSL and verify CA certificate
#   verify-full: Require SSL and verify CA + hostname
# POSTGRES_SSL_MODE=require

# Path to CA certificate (for verify-ca or verify-full)
# POSTGRES_SSL_ROOT_CERT=/path/to/ca-certificate.crt

# =============================================================================
# Connection Pool Configuration
# =============================================================================

# Number of workers (affects pool sizing: pool_size = WORKERS * 2)
# WORKERS=4

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Observability (optional)
# =============================================================================

# Phoenix Collector endpoint for tracing
# PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable SQL query logging (for debugging)
# SQL_ECHO=true
